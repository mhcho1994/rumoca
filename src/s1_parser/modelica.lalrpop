pub Composition: Vec<ast::CompositionPart> = {
    <first:ElementList>
    <remaining: CompositionPart*>
    => {
        let mut v = Vec::new();
        v.push(ast::CompositionPart::ElementList {
            visibility: ast::Visibility::Public,
            elements: first,
        });
        v.extend(remaining);
        v
    }
}

