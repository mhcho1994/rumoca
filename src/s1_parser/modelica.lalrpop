//âœ… expression :
//âœ…     simple-expression
//âœ…    | if expression then expression { elseif expression then expression } else expression

//âœ…  simple-expression :
//âœ…     logical-expression [ ":" logical-expression [ ":" logical-expression ] ]
pub Expression: ast::Expression = {
    <simp:SimpleExpression> => {
        simp
    },
    "if" <if_cond:SimpleExpression> "then"
    <if_expr:SimpleExpression>
    <else_if_blocks: ElseIfExpressionBlock*>
    <else_expr: ElseExpressionBlock?>
     => {
        ast::Expression::If {
            if_cond: Box::new(if_cond),
            if_expr: Box::new(if_expr),
            else_if_blocks,
            else_expr: Box::new(else_expr),
        }
    },
}

pub ElseIfExpressionBlock: ast::ElseIfExpressionBlock = {
    "elseif" <cond:SimpleExpression> "then" <then:SimpleExpression>  => {
        ast::ElseIfExpressionBlock {
            cond, then
        }
    }
}

pub ElseExpressionBlock: ast::Expression = {
    "else" <expr:SimpleExpression> => {
        expr
    }
}

pub ParenthesisExpression = SimpleExpression;

pub SimpleExpression: ast::Expression = {
//âœ… simple-expression :
//âœ…    logical-expression [ ":" logical-expression [ ":" logical-expression ] ]
    #[precedence(level="11")] #[assoc(side="left")]
    <lhs:SimpleExpression> ":" <rhs:SimpleExpression> => {
        ast::Expression::Range {
            lhs: Box::new(lhs),
            rhs: Box::new(rhs),
        }
    },
//âœ… logical-expression :
//âœ…    logical-term { or logical-term }
    #[precedence(level="10")] #[assoc(side="left")]
    <lhs:SimpleExpression> "or" <rhs:SimpleExpression> => {
        ast::Expression::Or {
            lhs: Box::new(lhs),
            rhs: Box::new(rhs),
        }
    },
//âœ… logical-term :
//âœ…    logical-factor { and logical-factor }
    #[precedence(level="9")] #[assoc(side="left")]
    <lhs:SimpleExpression> "and" <rhs:SimpleExpression> => {
        ast::Expression::And {
            lhs: Box::new(lhs),
            rhs: Box::new(rhs),
        }
    },
//âœ… logical-factor :
//âœ…    [ not ] relation
    #[precedence(level="8")]
    "not" <rhs:SimpleExpression> => {
        ast::Expression::Not {
            rhs: Box::new(rhs),
        }
    },
//âœ… relation :
//âœ…    arithmetic-expression [ relational-operator arithmetic-expression ]
//âœ… relational-operator :
//âœ…    "<" | "<=" | ">" | ">=" | "==" | "<>"
    #[precedence(level="7")] #[assoc(side="left")]
    <lhs:SimpleExpression> "<" <rhs:SimpleExpression> => {
        ast::Expression::LessThan {
            lhs: Box::new(lhs),
            rhs: Box::new(rhs),
        }
    },
    <lhs:SimpleExpression> ">" <rhs:SimpleExpression> => {
        ast::Expression::GreaterThan {
            lhs: Box::new(lhs),
            rhs: Box::new(rhs),
        }
    },
    <lhs:SimpleExpression> "<=" <rhs:SimpleExpression> => {
        ast::Expression::LessThanOrEqual {
            lhs: Box::new(lhs),
            rhs: Box::new(rhs),
        }
    },
    <lhs:SimpleExpression> ">=" <rhs:SimpleExpression> => {
        ast::Expression::GreaterThanOrEqual {
            lhs: Box::new(lhs),
            rhs: Box::new(rhs),
        }
    },
    <lhs:SimpleExpression> "==" <rhs:SimpleExpression> => {
        ast::Expression::Equal {
            lhs: Box::new(lhs),
            rhs: Box::new(rhs),
        }
    },
    <lhs:SimpleExpression> "<>" <rhs:SimpleExpression> => {
        ast::Expression::NotEqual {
            lhs: Box::new(lhs),
            rhs: Box::new(rhs),
        }
    },
    #[precedence(level="12")] #[assoc(side="left")]
    "-" <rhs:SimpleExpression> => {
        ast::Expression::Negative {
            rhs: Box::new(rhs),
        }
    },
//âœ… arithmetic-expression :
//âœ…    [ add-operator ] term { add-operator term }
//âœ… add-operator :
//âœ…    "+" | "-" | ".+" | ".-"
    #[precedence(level="5")] #[assoc(side="left")]
    <lhs:SimpleExpression> "+" <rhs:SimpleExpression> => {
        ast::Expression::Add {
            lhs: Box::new(lhs),
            rhs: Box::new(rhs),
        }
    },
    <lhs:SimpleExpression> ".+" <rhs:SimpleExpression> => {
        ast::Expression::ElemAdd {
            lhs: Box::new(lhs),
            rhs: Box::new(rhs),
        }
    },
    <lhs:SimpleExpression> "-" <rhs:SimpleExpression> => {
        ast::Expression::Sub {
            lhs: Box::new(lhs),
            rhs: Box::new(rhs),
        }
    },
    <lhs:SimpleExpression> ".-" <rhs:SimpleExpression> => {
        ast::Expression::ElemSub {
            lhs: Box::new(lhs),
            rhs: Box::new(rhs),
        }
    },
//âœ… term :
//âœ…    factor { mul-operator factor }
//âœ… mul-operator :
//âœ…    "*" | "/" | ".*" | "./"
    #[precedence(level="4")] #[assoc(side="left")]
    <lhs:SimpleExpression> "*" <rhs:SimpleExpression> => {
        ast::Expression::Mul {
            lhs: Box::new(lhs),
            rhs: Box::new(rhs),
        }
    },
    <lhs:SimpleExpression> ".*" <rhs:SimpleExpression> => {
        ast::Expression::ElemMul {
            lhs: Box::new(lhs),
            rhs: Box::new(rhs),
        }
    },
    <lhs:SimpleExpression> "/" <rhs:SimpleExpression> => {
        ast::Expression::Div {
            lhs: Box::new(lhs),
            rhs: Box::new(rhs),
        }
    },
    <lhs:SimpleExpression> "./" <rhs:SimpleExpression> => {
        ast::Expression::ElemDiv {
            lhs: Box::new(lhs),
            rhs: Box::new(rhs),
        }
    },
//âœ… factor :
//âœ…    primary [ ( "^" | ".^" ) primary ]
    #[precedence(level="3")] #[assoc(side="left")]
    <lhs:SimpleExpression> "^" <rhs:SimpleExpression> => {
        ast::Expression::Exp {
            lhs: Box::new(lhs),
            rhs: Box::new(rhs),
        }
    },
    <lhs:SimpleExpression> ".^" <rhs:SimpleExpression> => {
        ast::Expression::ElemExp {
            lhs: Box::new(lhs),
            rhs: Box::new(rhs),
        }
    },
//âœ… primary :
//âœ…    UNSIGNED-NUMBER
//ğŸŸ¥    | STRING
//âœ…    | false
//âœ…    | true
//âœ…    | ( component-reference
//âœ…        | der
//âœ…        | initial
//âœ…        | pure ) function-call-args
//âœ…    | component-reference
//ğŸŸ¥    | "(" output-expression-list ")" [ ( array-subscripts | "." IDENT ) ]
//ğŸŸ¥    | "[" expression-list { ";" expression-list } "]"
//ğŸŸ¥    | "{" array-arguments "}"
//ğŸŸ¥    | end
    #[precedence(level="0")]
    "(" <rhs:ParenthesisExpression> ")" => {
        ast::Expression::Parenthesis {
            rhs: Box::new(rhs)
        }
    },
    "{" <args:SeparatedList<Expression, ",">> "}" => {
        ast::Expression::ArrayArguments {
            args
        }
    },
    <val:"UNSIGNED-INTEGER"> => {
        ast::Expression::UnsignedInteger(val)
    },
    <val:"UNSIGNED-REAL"> => {
        ast::Expression::UnsignedReal(val)
    },
    <val:"boolean"> => {
        ast::Expression::Boolean(val)
    },
    <comp:ComponentReference> => {
        ast::Expression::Ref{comp}
    },
    <comp:ComponentReference> <args:FunctionCallArguments> => {
        ast::Expression::FunctionCall {
            comp,
            args
        }
    },
    "der" <args:FunctionCallArguments> => {
        ast::Expression::Der {
            args
        }
    },
}

