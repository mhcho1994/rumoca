{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "/*", "close": " */", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(model|class|connector|record|block|type|package|function|operator|if|for|while|when|equation|algorithm)\\b",
      "end": "^\\s*end\\s+\\w+"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(model|class|connector|record|block|type|package|function|operator|if|for|while|when|equation|algorithm|initial\\s+equation|initial\\s+algorithm|public|protected)\\b",
    "decreaseIndentPattern": "^\\s*(end|else|elseif)\\b"
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*"
}
